\def\xyEbene#1{%
  \ThreeDput[normal=0 0 1](0,0,0){% xy-Ebene
    \psgrid(0,0)(#1,#1)%
    \psline{->}(0,0)(0,#1) \psline{->}(0,0)(#1,0)
    \ifdim\psk@gridlabels pt>\z@
      \uput[180]{0.2}(0,#1){$y$} \uput[-90]{0.2}(#1,0){$x$}%
    \fi
  }}
\def\xzEbene#1{%
  \ThreeDput[normal=0 -1 0](0,0,0){% xz-Ebene
    \psgrid(0,0)(#1,#1)%
    \psline{->}(0,0)(0,5) \psline{->}(0,0)(#1,0)
    \ifdim\psk@gridlabels pt>\z@
      \uput[180]{0.2}(0,#1){$z$} \uput[-90]{0.2}(#1,0){$x$}%
    \fi
  }}
\def\yzEbene#1{%
  \ThreeDput[normal=1 0 0](0,0,0){% yz-Ebene
    \psgrid(0,0)(#1,#1)%
    \psline{->}(0,0)(0,#1) \psline{->}(0,0)(#1,0)
    \ifdim\psk@gridlabels pt>\z@
      \uput[180]{0.2}(0,#1){$z$} \uput[-90]{0.2}(#1,0){$y$}%
    \fi
}}
